---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
const metadata = {
  title: 'KU ACM',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: 'Learn more', href: '#about-us' },
      { text: 'Join Discord', href: 'https://discord.com/invite/yhRshEnJUB', target: '_blank', variant: 'primary' },
    ]}
    image={{ src: '~/assets/images/hero.jpg', alt: 'ACM Hero Image' }}
  >
    <Fragment slot="title">KU ACM</Fragment>
    
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        We are a group of students with one goal: building a greater, more collaborative computing community at The University of Kansas.</span
      >
      <span><br><br>Check the Calendar tab or join our Discord to see when we meet next!</span>
    </Fragment>
  </Hero>


  <!-- Features Widget *************** -->

  <Features
    id="about-us"
    tagline="What we do"
    title="About KU ACM"
    subtitle="We are the largest Engineering student organization at the University of Kansas. We are a student chapter of the Association for Computing Machinery (ACM)."
    items={[
      {
        title: 'Weekly Meetings',
        description:
          "KU ACM hosts weekly meetings that provide presentations from companies like Cerner, Paycom, and Garmin. We also host student presentations that show off new and cutting edge technologies, don't forget to grab a slice of pizza while you watch!", 
        icon: 'tabler:pizza',
      },
      {
        title: 'Annual Hackathon',
        description:
          'HackKU is an annual 36-hour hackathon at the University of Kansas, where students can have the opportunity to innovate new ideas, discover different paths, and push the boundaries of technology.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Tutoring',
        description:
          'KU ACM also provides free tutoring for many engineering classes including most EECS classes 500 level and below, Calculus 1-3, and linear algebra.',
        icon: 'tabler:book',
      },
      {
        title: 'Programming Club',
        description:
          'ACM Programming Club is a group of students who meet weekly to discuss programming topics and learn new skills.',
        icon: 'tabler:code',
      },
    ]}
  />
  

  
</Layout>
