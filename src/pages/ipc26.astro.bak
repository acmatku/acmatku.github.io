---
import Layout from '../layouts/PageLayout.astro';
import Hero from '../components/widgets/Hero.astro';
import Button from '../components/ui/Button.astro';

const metadata = {
  title: 'ICP 2026',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">Intramural Programming Competition 2026</Fragment>
    
    <Fragment slot="subtitle">
      <span class="hidden sm:inline mt-16">
        A 12-hour MLH Hack Day at the University of Kansas! There will be prizes for the winners of two themed tracks alongside free food for all attendees!
      </span>
    </Fragment>
  </Hero>

  <div class="w-2/3 m-auto flex flex-col items-center justify-center mb-16 gap-8">
    <ul class="flex flex-wrap gap-8 justify-center text-4xl">
      <li class="whitespace-nowrap">ğŸ—“ï¸ 02/07/26</li>
      <li class="whitespace-nowrap">ğŸ•˜ 9AM - 9PM</li>
      <li class="whitespace-nowrap">ğŸ“ LEEP2</li>
      <li class="whitespace-nowrap">ğŸ‘¥ Teams of 2</li>
    </ul>

    <div class="border-4 border-white rounded-xl p-4">
      <h2 class="text-4xl mb-4">Two Tracks:</h2>
      <ul class="flex flex-col gap-2 text-3xl text-center list-disc list-inside">
        <li>General</li>
        <li>Gemini AI</li>
      </ul>
    </div>

    <div class="flex flex-col md:flex-row gap-8">
      <div class="flex flex-col justify-center">
        <p class="text-2xl">More information is available on the Devpost!</p>
      </div>
      <Button {...({ text: 'Take me there!', href: 'https://ku-ipc.devpost.com/', target: '_blank', variant: 'primary'})} />
    </div>
    <div class="flex flex-col md:flex-row gap-8">
      <div class="flex flex-col justify-center">
        <p class="text-2xl">And if you're interested...</p>
      </div>
      <Button {...({ text: 'Apply to be a Judge!', href: 'https://docs.google.com/forms/d/e/1FAIpQLSc5nc9ao4G5IkxVT9XgSKuLj11Vcw1GOUyp21IQ8BzwhOr60Q/viewform', target: '_blank', variant: 'primary'})} />
    </div>

    <div></div>
  </> 
</Layout>
