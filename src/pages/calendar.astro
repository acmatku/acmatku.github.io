---
import Hero from '../components/widgets/Hero.astro';
import Layout from '../layouts/PageLayout.astro';
import NextMeeting from '../components/NextMeeting';
import Timeline from '../components/ui/Timeline.astro';
import { UPCOMING_MEETINGS } from '../data/meetings'

const metadata = {
  title: 'Calendar',
};

---

<Layout metadata={metadata}>
  <Hero tagline="Calendar" >
    <Fragment slot="title">
      Come See What We're Up To! <br/>
    </Fragment>

    <Fragment slot="subtitle">We are meeting in <strong class="font-bold">LEEP2 G415 Wed 6-7 PM</strong> for the <em class="italic">Spring 2025</em> semester.</Fragment>
  </Hero>

  <NextMeeting meetings={UPCOMING_MEETINGS} client:load/>
  <!-- <Timeline items={UPCOMING_MEETINGS} defaultIcon='tabler:code'/> -->

</Layout>
